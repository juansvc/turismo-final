<%= form_for @imagen, :html => {:multipart => true, :class => 'form-horizontal form-model'} do |f| %> 
  <div class="form-group">
    <%= f.label :nombre_imagen, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nombre_imagen, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Imagen, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :foto %>  
    </div>
  </div>
   <div class="form-group">
    <%= f.label :descripcion_imagen, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :descripcion_imagen, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lugar, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :lugar, Lugar.all, :id, :nombre_lugar %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  ubicacions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>  