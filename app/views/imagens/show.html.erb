<%- model_class = Imagen -%>
<div class="page-header">
  <h1><%=t '.title', :default => Imagen %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nombre_imagen) %></dt>
      <dd><pre class="prettyprint"><%= @imagen.nombre_imagen %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:imagen) %></dt>
      <dd><pre class="prettyprint"><%= image_tag @imagen.foto.url(:medium) %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descripcion_imagen) %></dt>
      <dd><pre class="prettyprint"><%= @imagen.descripcion_imagen %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lugar_id) %></dt>
      <dd><pre class="prettyprint"><%= @imagen.lugar_id %></pre></dd>
      <dd><pre class="prettyprint"><%= @imagen.lugar.nombre_lugar %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("AtrÃ¡s")),
              imagens_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_imagen_path(@imagen), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              imagen_path(@imagen),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

