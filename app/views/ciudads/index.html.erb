<%- model_class = Ciudad -%>
<div class="page-header">
  <h1><%=t '.title', :default => Ciudad %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:nombre_ciudad) %></th>
      <th><%= model_class.human_attribute_name(:creado_el) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ciudads.each do |ciudad| %>
      <tr>
        <td><%= ciudad.id %></td>
        <td><%= ciudad.nombre_ciudad %></td>
        <td><%=l ciudad.created_at, format: :long %></td>
        <td>
          <%= link_to ciudad_path(ciudad), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to ciudad_path(ciudad), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('Eliminar')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nueva")),
            new_ciudad_path,
            :class => 'btn btn-primary' %>
