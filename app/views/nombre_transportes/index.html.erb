<%- model_class = NombreTransporte -%>
<div class="page-header">
  <h1><%=t '.title', :default => NombreTransporte %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:creado_el) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @nombre_transportes.each do |nombre_transporte| %>
      <tr>
        <td><%= nombre_transporte.id %></td>
        <td><%= nombre_transporte.nombre %></td>
        <td><%=l nombre_transporte.created_at, format: :long %></td>
        <td>
          <%= link_to nombre_transporte_path(nombre_transporte), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to nombre_transporte_path(nombre_transporte), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('Eliminar')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nuevo")),
            new_nombre_transporte_path,
            :class => 'btn btn-primary' %>
