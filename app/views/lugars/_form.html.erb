    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefonos, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :telefonos, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :link, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_lugar, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :tipo_lugar, TipoLugar.all, :id, :nombre_tipo %>
    </div>
  </div>
  <div class="form-group">
