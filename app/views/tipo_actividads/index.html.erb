<%- model_class = TipoActividad -%>
<div class="page-header">
  <h1><%=t '.title', :default => TipoActividad %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:creado_el) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_actividads.each do |tipo_actividad| %>
      <tr>
        <td><%= tipo_actividad.id %></td>
        <td><%= tipo_actividad.nombre %></td>
        <td><%=l tipo_actividad.created_at, format: :long %></td>
        <td>
          <%= link_to tipo_actividad_path(tipo_actividad), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tipo_actividad_path(tipo_actividad), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('Eliminar')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nueva")),
            new_tipo_actividad_path,
            :class => 'btn btn-primary' %>
