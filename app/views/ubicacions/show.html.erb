<%- model_class = Ubicacion -%>

<head>
<script src="http://maps.googleapis.com/maps/api/js"></script>
<script>
                          function initialize() {
                            var i = 1;
                            var myLatlng = new google.maps.LatLng(<%= @ubicacion.latitud %>, <%= @ubicacion.longitud %>)
                            var mapProp = {
                              zoom:14,
                              center: myLatlng,
                              mapTypeId:google.maps.MapTypeId.ROADMAP
                            };
                            var map=new google.maps.Map(document.getElementById("Map"),mapProp);
                            var marker = new google.maps.Marker({
                                position: myLatlng,
                                map: map
                            });
                            i++;
                          }
                          google.maps.event.addDomListener(window, 'load', initialize);
                          </script>
</head>

<div class="page-header">
  <h1><%=t '.title', :default => Ubicacion %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:longitud) %></dt>
      <dd><pre class="prettyprint"><%= @ubicacion.longitud %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:latitud) %></dt>
      <dd><pre class="prettyprint"><%= @ubicacion.latitud %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:referencia) %></dt>
      <dd><pre class="prettyprint"><%= @ubicacion.referencia %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ciudad_id) %></dt>
      <dd><pre class="prettyprint"><%= @ubicacion.ciudad.nombre_ciudad %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nombre_lugar) %>
      </dt>
      <dd><pre class="prettyprint"><%= @ubicacion.lugar.nombre_lugar %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mapa) %>
      </dt>
      <dd><pre class="prettyprint"><div id="Map" style="width:500px;height:380px;"></div></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ubicacion_creada) %>
      <dd><pre class="prettyprint"><%=l @ubicacion.created_at, format: :long %></pre></dd>
      </dt>
        
                          
  </dl>
</div>
<div class="form-group">
  <%= link_to t('.back', :default => t("AtrÃ¡s")),
              ubicacions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_ubicacion_path(@ubicacion), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              ubicacion_path(@ubicacion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>