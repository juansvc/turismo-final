<%- model_class = Actividad -%>
<div class="page-header">
  <h1><%=t '.title', :default => Actividad %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descripcion) %></dt>
      <dd><pre class="prettyprint"><%= @actividad.descripcion %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hora_inicio) %></dt>
      <dd><pre class="prettyprint"><%= @actividad.hora_inicio %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hora_fin) %></dt>
      <dd><pre class="prettyprint"><%= @actividad.hora_fin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tipo_actividad) %></dt>
      <dd><pre class="prettyprint"><%= @actividad.tipo_actividad_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("AtrÃ¡s")),
              actividads_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_actividad_path(@actividad), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              actividad_path(@actividad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

