<%- model_class = Comentario -%>
<div class="page-header">
  <h1><%=t '.title', :default => Comentario %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:lugar_id) %></th>
      <th><%= model_class.human_attribute_name(:creado_el) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.id %></td>
        <td><%= comentario.comentario %></td>
        <td><%= comentario.lugar_id %></td>
        <td><%=l comentario.created_at, format: :long %></td>
        <td>
          <%= link_to comentario_path(comentario), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to comentario_path(comentario), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('Eliminar')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nuevo")),
            new_comentario_path,
            :class => 'btn btn-primary' %>
