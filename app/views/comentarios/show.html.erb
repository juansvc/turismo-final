<%- model_class = Comentario -%>
<div class="page-header">
  <h1><%=t '.title', :default => Comentario %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comentario) %></dt>
      <dd><pre class="prettyprint"><%= @comentario.comentario %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lugar_id) %></dt>
      <dd><pre class="prettyprint"><%= @comentario.lugar_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("AtrÃ¡s")),
              comentarios_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_comentario_path(@comentario), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              comentario_path(@comentario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

